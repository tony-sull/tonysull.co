---
import type { Like } from '@data/likes.js'
import { shortDate } from '@utils/dates'
import Show from './Show.astro'

export type Props = Like

const { title, 'like-of': url, date, metadata } = Astro.props
---

<article>
  <a href={url}>
    <Show when={metadata.image}>
      <img src={metadata.image} alt="" width={400} height={400} />
    </Show>
    <h3>{title}</h3>
    <p>Liked â‹… {shortDate(date)}</p>
  </a>
</article>

<style>
  img {
    object-fit: contain;
  }
</style>
