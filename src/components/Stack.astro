---
import type { HTMLTag } from 'astro/types'
import Component, { type Props as ComponentProps } from './Component.astro'

export type Props<T extends HTMLTag = 'div'> = ComponentProps<T>

const { class: className, ...attrs } = Astro.props
---

<Component class:list={[className, 'stack']} {...attrs}>
	<slot />
</Component>

<style>
	.stack {
		display: flex;
		flex-direction: column;
		gap: var(--gap, var(--space-md));
	}
</style>
